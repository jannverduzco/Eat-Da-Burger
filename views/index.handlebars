  <br>

  <ol>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
      {{burger_name}}
      <button class="devour-it" data-id="{{id}}" data-newDevour="{{devoured}}">
        {{#if devoured}}DONE!{{else}}DEVOUR IT!{{/if}}
      </button>
    </li>
    {{/unless}}
    {{/each}}
  </ol>


  <div class="text-center">
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="brg" name="name">
      </div>
      <button type="submit">Submit</button>
      <h2>Add a burger and Click the "Submit" button</h2>
    </form>
  </div>
